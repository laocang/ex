html{ height:100%; font-family:SimSun; color:#818181;}
body{ padding:0; margin:0;  background-color:#ebebeb;}
textarea,select{ border:1px solid #b7b7b7; font-size:1em;}
a
  {
  text-decoration:none;color:#000000;
  }
select{ height:1.4em;}
button{ width:4em; line-height:1.4em; border-width:0; font-size:1.3rem; letter-spacing:.3em; text-indent:.5em; border-radius:5px; text-align:center; cursor:pointer; color:#fff; background-color:#6bc30d;}
.hide{ display:none;}
.ul{ padding:0; margin:0; list-style-type:none;}
.ui-pinch{ padding:1.2em 1.2em 0.1em 1.2em;}
.ui-select-show{ display:none;}
.ui-nav>a,.ui-tab>a{ text-decoration:none; color:#000;}
.ui-tab-nav{ width:100%; font-size:1.38em; display:table;}
.ui-tab-nav>a{ width:33%; padding:.8em 0; display:table-cell; position:relative; outline:none; text-align:center; color:#fff; background-color:#a8a8a8;}
.ui-tab-nav>.current:after{ width:100%; height:0; position:absolute; bottom:0; left:0; content:""; border-top:3px solid #6bc30d;}
.ui-article{ padding-top:0;}
.ui-article>h2{ padding:.5em 0; margin:0; font-size:1.39em; text-align:center; color:#888;}
.ui-article>p{ padding:.8em 0; margin:0; border-bottom:1px solid #d8d8d8;}
.ui-forms-footer{ background-color:#fff;}
.ui-forms-footer>div{ padding:0.1em 0 }
.ui-table-div{ width:100%; display:table;}
.ui-table-div>div{ display:table-cell; vertical-align:middle; color:#878787;}
.ui-table-div>div:first-child{ width:5em; padding-right:.5em; white-space:nowrap;}
.ui-table-div .ui-select{ width:100%; color:#878787; background-color:#ebebeb;}
.ui-opinion{ width:100%; height:100px; margin:0; box-sizing:border-box; resize:none;}
div.ui-forms-butpanel{ padding-bottom:0; font-size:0; text-align:justify;}
.ui-forms-butpanel:after{ width:90%; height:1px; line-height:0; display:inline-block; content:""; overflow:hidden;}
/* 日程管理 */
.ui-data-tab>a{ width:50%;}
.ui-data-tab>.current{ color:inherit; background-color:transparent;}
.ui-data-tab>.current:after{ content:normal;}
.ui-data{ border:1px solid #dbdddf; border-radius:5px; overflow:hidden;}
.ui-data>li:first-child{ margin-top:0;}
.ui-data>li{ margin-top:.3em;}
.ui-data>li>p{ padding:1em; margin:0;}
.ui-data-time{ color:#666; background-color:#dbdddf;}
.ui-data-info:after{}
.ui-data .ui-data-info{ padding-right:0.5em; background-color:#fff;}

.ui-sche-div {text-align:center; padding-top:0.8em; margin-top:0.5em;width:100%; height:45px; line-height:45px;
	background:#ebebeb;
	position:fixed; bottom:0; left:0; z-index:11;
	_position:absolute; _top:expression(documentElement.scrollTop+documentElement.clientHeight-this.offsetHeight);}
.ui-sche-div > button {width:5em;letter-spacing:.15em; text-indent:0.35em; font-size:1.1em;} 
.ui-sche-div > button:first-child {  float:left; margin-left:1em;}
.ui-sche-div > button:last-child {  float:right; margin-right:1em;}

/* 图片新闻 */
.ui-new-page{ position:relative; padding-bottom:20px;}
.ui-img-tab{ width:100%; padding:5px 0; position:absolute; bottom:0; font-size:0; text-align:center; background-color:#a8a8a8;}
.ui-img-tab:after{ width:100%; height:100%; position:absolute; top:0; left:0; content:""; background-image:url(about:link);}
.ui-img-tab>a{ width:8px; height:8px; margin:0 4px; border-radius:4px; border:1px solid #fff; display:inline-block;}
.ui-img-tab>.current{ border-color:#ffffff; background-color:#ffffff;}
.ui-img-content{ position:relative;}
.ui-img-content>div>img{ width:100%; border-width:0;}
.ui-img-content>div>p{ width:100%; padding:.2em 0; margin:0; position:absolute; left:0; bottom:0; text-align:center; color:#fff; background-color:hsla(0,100%,0%,0.5);}
.ui-new-lists{ padding:0 .1em;}
.ui-new-lists>li{ padding:.8em 0 .8em 50px; margin-top:.5em; background:#fff url(../images/newlists.png) no-repeat .4em;}
.ui-new-lists a{ text-decoration:none; color:#000000;}
/* 通讯录*/ 
.ui-txl-search{ width:100%; padding:.5em; display:table; box-sizing:border-box; background-color:#fff; position:relative;}
.ui-txl-search>div{ display:table-cell; vertical-align:middle;}
.ui-txl-search>div:first-child{ width:95%; padding-left:34px; border:1px solid #c6c6c6; position:relative; background:url(../images/search.png) no-repeat .4em;}
.ui-txl-search>div:nth-child(2){ padding-left:.4em;}
.ui-txl-input{ width:100%;  border-width:0; font-size:1em; outline:none; background-color:transparent; height:24px; position:absolute; margin-top:-0.7em}
.ui-txl-search button{ width:6em; white-space:normal; font-size:1.1rem;}
.ui-txl-name{ padding:0 .1em;}
.ui-txl-name>li{ padding:.8em; padding-right:1.8em;border-bottom:1px solid #c6c6c6;}
.ui-name-href{ position:relative; background-color:#fff; }
.ui-name-href:after{ width:34px; height:36px; margin-top:-18px; position:absolute; right:.5em; top:50%; content:""; background:url(../images/txlname.png) no-repeat 50%;}
.ui-name-href >span {padding:0 .1em;}
.ui-name-href a img{ position:relative; top:4px;}
.ui-name-up{ position:relative; background-color:#fff; z-index:10;}
.ui-name-up:after{ width:36px; height:36px; margin-top:-18px; position:absolute; right:.8em; top:75%; content:""; background:url(../images/txlnameup.png) no-repeat;}
.ui-name-down{ position:relative; background-color:#fff; z-index:10; }
.ui-name-down:after{ width:36px; height:36px; margin-top:-18px; position:absolute; right:.8em; top:75%; content:""; background:url(../images/txlnamedown.png) no-repeat;}

/* 固定头部 */
.ui-header-fixed{ height:3.864em;}
.ui-header-fixed>.ui-tab-nav{ position:fixed;}

